{{ 'task-1.css' | asset_url | stylesheet_tag }}

<div class="main-card">
  <div class="card__image">
    <img
      src="{{ section.settings.card_image | img_url: 'master' }}"
      alt="{{ section.settings.ImageAlt }}"
      width="100%"
      height="100%"
    >
  </div>
  <div class="card__container">
    <div class="card__content">
      <h1 class="card__title">{{ section.settings.Title }}</h1>
      <p class="card__text">
        {{ section.settings.TextVisible }}
      </p>
      <p class="card__text card__text--hidden">
        {{ section.settings.TextHidden }}
      </p>
      <button class="card__button" onclick="toggleTextButton()">Learn more</button>
    </div>
  </div>
</div>
<script src="{{ 'task-1.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Task 1",
  "settings": [
    {
      "type": "image_picker",
      "id": "card_image",
      "label": "Card Image"
    },
    {
    "type":"text",
    "label":"ImageAlt",
    "id":"ImageAlt",
    "default":"Woman with handbag",
  },
    {
    "type":"text",
    "label":"Title",
    "id":"Title",
    "default":"HANDCRAFTED AND RESPONSIBLY SOURCED",
  },
    {
    "type":"text",
    "label":"TextVisible",
    "id":"TextVisible",
      "default":"On the other hand, we denounce with righteous indignation and dislike men who are so beguiled and demoralized by the charms of pleasure of the moment, so blinded by desire, that they cannot foresee the pain and trouble that are bound to ensue; and equal blame belongs to those who fail in their duty through weakness of will, which is the same as saying through shrinking from toil and pain.",
  },
    {
    "type":"text",
    "label":"TextHidden",
    "id":"TextHidden",
    "default":"On the other hand, we denounce with righteous indignation and dislike men who are so beguiled and demoralized by the charms of pleasure of the moment, so blinded by desire, that they cannot foresee the pain and trouble that are bound to ensue; and equal blame belongs to those who fail in their duty through weakness of will, which is the same as saying through shrinking from toil and pain.",
  },
  ],
  "presets":[{
    "name":"Task 1"
  }]
}
{% endschema %}
